<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/cl_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/cl_main_app_bar"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintBottom_toTopOf="@id/vp_main"
        android:paddingHorizontal="15dp"
        android:background="@color/main_color"
        app:layout_constraintVertical_weight="1"
        android:elevation="10dp">
        <ImageView
            android:id="@+id/iv_main_send"
            android:layout_width="30dp"
            android:layout_height="30dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            android:src="@drawable/ic_main_message_list">
        </ImageView>
        <TextView
            android:id="@+id/tv_main_title"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            app:layout_constraintLeft_toRightOf="@id/iv_main_send"
            app:layout_constraintTop_toTopOf="@id/iv_main_send"
            app:layout_constraintBottom_toBottomOf="@id/iv_main_send"
            app:layout_constraintRight_toLeftOf="@id/iv_main_notify"
            android:layout_marginLeft="10dp"
            android:text="someone name"
            android:textAlignment="textStart"
            android:autoSizeTextType="uniform"
            android:autoSizeMaxTextSize="24sp"
            android:autoSizeMinTextSize="15sp"
            android:textStyle="bold"
            android:textColor="@color/sub_color">
        </TextView>
        <ImageView
            android:id="@+id/iv_main_notify"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:src="@drawable/ic_main_notify"
            app:layout_constraintRight_toLeftOf="@id/iv_main_search"
            app:layout_constraintTop_toTopOf="@id/cv_main_profile_menu"
            app:layout_constraintBottom_toBottomOf="@id/cv_main_profile_menu"
            android:layout_marginRight="10dp">
        </ImageView>
        <ImageView
            android:id="@+id/iv_main_search"
            android:layout_width="30dp"
            android:layout_height="30dp"
            app:layout_constraintRight_toLeftOf="@id/cv_main_profile_menu"
            app:layout_constraintTop_toTopOf="@id/cv_main_profile_menu"
            app:layout_constraintBottom_toBottomOf="@id/cv_main_profile_menu"
            android:src="@drawable/ic_main_search"
            android:layout_marginRight="10dp">
        </ImageView>
        <androidx.cardview.widget.CardView
            android:id="@+id/cv_main_profile_menu"
            android:layout_width="30dp"
            android:layout_height="30dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:cardCornerRadius="30dp"
            android:backgroundTint="@color/transparent">
            <ImageView
                android:id="@+id/iv_main_profile_menu"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:src="@drawable/ic_general_menu">
            </ImageView>
        </androidx.cardview.widget.CardView>
    </androidx.constraintlayout.widget.ConstraintLayout>

    <androidx.viewpager2.widget.ViewPager2
        android:id="@+id/vp_main"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintTop_toBottomOf="@id/cl_main_app_bar"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintVertical_weight="12">
    </androidx.viewpager2.widget.ViewPager2>


    <com.airbnb.lottie.LottieAnimationView
        android:id="@+id/lav_main_loading"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintTop_toTopOf="@id/vp_main"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintBottom_toBottomOf="@id/vp_main"
        app:lottie_fileName="login_loading.json"
        app:lottie_autoPlay="true"
        app:lottie_loop="true"
        android:background="@color/white"
        android:visibility="gone">
    </com.airbnb.lottie.LottieAnimationView>

</androidx.constraintlayout.widget.ConstraintLayout>