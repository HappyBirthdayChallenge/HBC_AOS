<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="@color/white"
    android:clickable="true">


        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/rv_letter_write_media"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintBottom_toTopOf="@id/et_letter"
            app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
            android:orientation="horizontal">
        </androidx.recyclerview.widget.RecyclerView>
        <EditText
            android:id="@+id/et_letter"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            app:layout_constraintTop_toBottomOf="@id/rv_letter_write_media"
            app:layout_constraintBottom_toBottomOf="parent"
            android:background="@color/transparent">
        </EditText>
        <com.google.android.material.floatingactionbutton.FloatingActionButton
            android:id="@+id/fab_letter_add"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintBottom_toTopOf="@id/fab_letter_send"
            android:layout_marginRight="16dp"
            android:layout_marginBottom="16dp"
            android:src="@drawable/ic_add_component">
        </com.google.android.material.floatingactionbutton.FloatingActionButton>
        <com.google.android.material.floatingactionbutton.ExtendedFloatingActionButton
            android:id="@+id/fab_letter_send"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginBottom="30dp"
            android:layout_marginRight="16dp"
            style="?attr/extendedFloatingActionButtonStyle"
            app:icon="@drawable/ic_send_letter"
            android:text="send">
        </com.google.android.material.floatingactionbutton.ExtendedFloatingActionButton>



