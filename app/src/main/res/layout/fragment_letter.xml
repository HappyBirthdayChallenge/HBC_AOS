    <TextView
        android:id="@+id/tv_letter_add_background"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toTopOf="@id/rv_letter_add_menu"
        android:background="@color/transparent_gray"
        android:visibility="gone">
    </TextView>
        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/rv_letter_add_menu"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@id/tv_letter_add_background"
            app:layout_constraintBottom_toBottomOf="parent"
            android:visibility="gone"
            app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
            android:orientation="vertical"
            tools:listitem="@layout/item_letter_menu">
        </androidx.recyclerview.widget.RecyclerView>
</androidx.constraintlayout.widget.ConstraintLayout>