<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/white">
    <ImageView
        android:id="@+id/iv_item_main_bg"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scaleType="fitXY"
        android:src="@drawable/bg_type1_front">
    </ImageView>
    <ImageView
        android:id="@+id/iv_item_main_cake"
        android:layout_width="200dp"
        android:layout_height="200dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:src="@drawable/img_deco_cake_11">
    </ImageView>



    <ImageView
        android:id="@+id/iv_item_main_gift_1"
        android:layout_width="85dp"
        android:layout_height="85dp"
        android:src="@drawable/img_deco_gift_1"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginBottom="10dp"
        android:layout_marginRight="10dp"
        android:elevation="1dp">
    </ImageView>
    <ImageView
        android:id="@+id/iv_item_main_gift_2"
        android:layout_width="85dp"
        android:layout_height="85dp"
        android:src="@drawable/img_deco_gift_2"
        app:layout_constraintTop_toTopOf="@id/iv_item_main_gift_1"
        app:layout_constraintRight_toLeftOf="@id/iv_item_main_gift_1"
        android:layout_marginRight="-45dp"
        android:layout_marginTop="-45dp">
    </ImageView>
    <ImageView
        android:id="@+id/iv_item_main_gift_3"
        android:layout_width="85dp"
        android:layout_height="85dp"
        android:src="@drawable/img_deco_gift_3"
        app:layout_constraintRight_toLeftOf="@id/iv_item_main_gift_1"
        app:layout_constraintBottom_toBottomOf="@id/iv_item_main_gift_1"
        android:layout_marginRight="5dp"
        android:elevation="1dp">
    </ImageView>
    <ImageView
        android:id="@+id/iv_item_main_gift_4"
        android:layout_width="85dp"
        android:layout_height="85dp"
        android:src="@drawable/img_deco_gift_4"
        app:layout_constraintTop_toTopOf="@id/iv_item_main_gift_3"
        app:layout_constraintRight_toLeftOf="@id/iv_item_main_gift_3"
        android:layout_marginRight="-45dp"
        android:layout_marginTop="-45dp">
    </ImageView>


    <ImageView
        android:id="@+id/iv_item_main_toy_1"
        android:layout_width="85dp"
        android:layout_height="85dp"
        android:src="@drawable/img_deco_toy_1"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginLeft="50dp"
        android:layout_marginBottom="10dp"
        android:elevation="1dp">
    </ImageView>
    <ImageView
        android:id="@+id/iv_item_main_toy_2"
        android:layout_width="85dp"
        android:layout_height="85dp"
        android:src="@drawable/img_deco_toy_2"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginBottom="50dp">
    </ImageView>
    <ImageView
        android:id="@+id/iv_item_main_toy_3"
        android:layout_width="85dp"
        android:layout_height="85dp"
        android:src="@drawable/img_deco_toy_3"
        app:layout_constraintLeft_toRightOf="@id/iv_item_main_toy_1"
        app:layout_constraintBottom_toBottomOf="@id/iv_item_main_toy_1"
        android:layout_marginLeft="10dp"
        android:layout_marginBottom="10dp"
        android:elevation="1dp">
    </ImageView>
    <ImageView
        android:id="@+id/iv_item_main_toy_4"
        android:layout_width="85dp"
        android:layout_height="85dp"
        android:src="@drawable/img_deco_toy_4"
        app:layout_constraintLeft_toRightOf="@id/iv_item_main_toy_2"
        app:layout_constraintBottom_toBottomOf="@id/iv_item_main_toy_2">
    </ImageView>

</androidx.constraintlayout.widget.ConstraintLayout>