<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/white"
    android:clickable="true"
    android:layout_marginHorizontal="@dimen/login_margin">
    <ImageView
        android:id="@+id/iv_signup6_back"
        android:layout_width="25dp"
        android:layout_height="25dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toLeftOf="@id/tv_signup6_title"
        android:src="@drawable/ic_back"
        android:layout_marginTop="@dimen/login_margin">
    </ImageView>
    <TextView
        android:id="@+id/tv_signup6_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintLeft_toRightOf="@id/iv_signup6_back"
        app:layout_constraintTop_toTopOf="@id/iv_signup6_back"
        app:layout_constraintBottom_toBottomOf="@id/iv_signup6_back"
        android:text="최종확인"
        android:textSize="20sp"
        android:textStyle="bold"
        android:layout_marginLeft="15dp">
    </TextView>

    <TextView
        android:id="@+id/tv_signup6_subtitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintBottom_toTopOf="@id/tv_signup6_name_title"
        android:text="입력정보를 확인해주세요"
        android:textSize="20sp"
        android:textStyle="bold"
        android:layout_marginTop="@dimen/login_subtitle_margin">
    </TextView>



    <TextView
        android:id="@+id/tv_signup6_name_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/tv_signup6_subtitle"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintBottom_toTopOf="@id/tv_signup6_name"
        android:layout_marginHorizontal="@dimen/login_textfield_margin"
        android:layout_marginTop="@dimen/login_subtitle_to_textfield"
        android:text="이름"
        android:textSize="13sp">
    </TextView>
    <TextView
        android:id="@+id/tv_signup6_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/tv_signup6_name_title"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintBottom_toTopOf="@id/tv_signup6_id_title"
        android:layout_marginHorizontal="@dimen/login_textfield_margin"
        android:text="name"
        android:textSize="18sp"
        android:textStyle="bold"
        android:layout_marginBottom="@dimen/login_info_margin">
    </TextView>


    <TextView
        android:id="@+id/tv_signup6_id_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tv_signup6_name"
        app:layout_constraintBottom_toTopOf="@id/tv_signup6_id"
        android:layout_marginHorizontal="@dimen/login_textfield_margin"
        android:text="아이디"
        android:textSize="13sp">
    </TextView>
    <TextView
        android:id="@+id/tv_signup6_id"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tv_signup6_id_title"
        app:layout_constraintBottom_toTopOf="@id/tv_signup6_phone_title"
        android:layout_marginHorizontal="@dimen/login_textfield_margin"
        android:layout_marginBottom="@dimen/login_info_margin"
        android:text="id"
        android:textSize="18sp"
        android:textStyle="bold">
    </TextView>


    <TextView
        android:id="@+id/tv_signup6_phone_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tv_signup6_id"
        app:layout_constraintBottom_toTopOf="@id/tv_signup6_phone"
        android:layout_marginHorizontal="@dimen/login_textfield_margin"
        android:text="휴대폰 번호"
        android:textSize="13sp">
    </TextView>
    <TextView
        android:id="@+id/tv_signup6_phone"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tv_signup6_phone_title"
        app:layout_constraintBottom_toTopOf="@id/tv_signup6_birth_title"
        android:layout_marginHorizontal="@dimen/login_textfield_margin"
        android:layout_marginBottom="@dimen/login_info_margin"
        android:textSize="18sp"
        android:textStyle="bold"
        android:text="phone">
    </TextView>


    <TextView
        android:id="@+id/tv_signup6_birth_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tv_signup6_phone"
        app:layout_constraintBottom_toTopOf="@id/tv_signup6_birth"
        android:layout_marginHorizontal="@dimen/login_textfield_margin"
        android:text="생일"
        android:textSize="13sp">
    </TextView>
    <TextView
        android:id="@+id/tv_signup6_birth"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tv_signup6_birth_title"
        android:layout_marginHorizontal="@dimen/login_textfield_margin"
        android:textSize="18sp"
        android:textStyle="bold"
        android:text="birth">
    </TextView>



    <TextView
        android:id="@+id/tv_signup6_spacer"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toTopOf="@id/tv_signup6_start"
        app:layout_constraintLeft_toLeftOf="parent">
    </TextView>

    <TextView
        android:id="@+id/tv_signup6_start"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tv_signup6_spacer"
        android:layout_marginTop="18dp"
        android:layout_marginBottom="@dimen/login_next_btn_to_bottom"
        android:text="시작하기"
        android:textSize="20sp"
        android:textStyle="bold"
        android:textColor="@color/white"
        android:gravity="center"
        android:background="@drawable/item_highlighted_btn"
        android:paddingVertical="14dp">
    </TextView>


    <com.airbnb.lottie.LottieAnimationView
        android:id="@+id/lav_signup6_loading"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:lottie_fileName="login_loading.json"
        app:lottie_autoPlay="true"
        app:lottie_loop="true"
        android:background="@color/white"
        android:visibility="invisible">

    </com.airbnb.lottie.LottieAnimationView>
</androidx.constraintlayout.widget.ConstraintLayout>