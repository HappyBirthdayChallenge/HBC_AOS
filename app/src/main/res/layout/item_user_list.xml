<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/white">
    <androidx.cardview.widget.CardView
        android:id="@+id/cv_item_user_list"
        android:layout_width="50dp"
        android:layout_height="50dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintRight_toLeftOf="@id/tv_item_user_list_id"
        app:cardCornerRadius="80dp"
        android:layout_margin="10dp">
        <ImageView
            android:id="@+id/iv_item_user_list"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:src="@drawable/ic_gohome">
        </ImageView>
    </androidx.cardview.widget.CardView>


    <TextView
        android:id="@+id/tv_item_user_list_id"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintLeft_toRightOf="@id/cv_item_user_list"
        app:layout_constraintTop_toTopOf="@id/cv_item_user_list"
        app:layout_constraintBottom_toTopOf="@id/tv_item_user_list_name"
        android:layout_marginLeft="10dp"
        android:text="aaaaaa"
        android:textSize="16sp"
        android:textStyle="bold">
    </TextView>
    <TextView
        android:id="@+id/tv_item_user_list_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/tv_item_user_list_id"
        app:layout_constraintBottom_toBottomOf="@id/cv_item_user_list"
        app:layout_constraintLeft_toLeftOf="@id/tv_item_user_list_id"
        android:text="userName"
        android:textSize="13sp">
    </TextView>


    <TextView
        android:id="@+id/tv_item_user_list_follow"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/item_blue_follow_btn"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:text="팔로우"
        android:textSize="15sp"
        android:textStyle="bold"
        android:textColor="@color/blue"
        android:paddingHorizontal="10dp"
        android:paddingVertical="5dp"
        android:layout_marginRight="10dp"
        android:elevation="5dp">
    </TextView>
</androidx.constraintlayout.widget.ConstraintLayout>