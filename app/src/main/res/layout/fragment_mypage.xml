<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/cl_my_app_bar"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintBottom_toTopOf="@id/rv_my"
        android:paddingHorizontal="15dp"
        app:layout_constraintVertical_weight="1"
        android:elevation="10dp">
        <ImageView
            android:id="@+id/iv_my_back"
            android:layout_width="30dp"
            android:layout_height="30dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            android:src="@drawable/ic_back">
        </ImageView>
        <TextView
            android:id="@+id/tv_my_id"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            app:layout_constraintLeft_toRightOf="@id/iv_my_back"
            app:layout_constraintTop_toTopOf="@id/iv_my_back"
            app:layout_constraintBottom_toBottomOf="@id/iv_my_back"
            app:layout_constraintRight_toLeftOf="@id/iv_my_notify"
            android:layout_marginLeft="10dp"
            android:text="someone name"
            android:textAlignment="textStart"
            android:autoSizeTextType="uniform"
            android:autoSizeMaxTextSize="24sp"
            android:autoSizeMinTextSize="15sp"
            android:textStyle="bold">
        </TextView>
        <ImageView
            android:id="@+id/iv_my_notify"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:src="@drawable/ic_notify"
            app:layout_constraintTop_toTopOf="@id/iv_my_menu"
            app:layout_constraintBottom_toBottomOf="@id/iv_my_menu"
            app:layout_constraintRight_toLeftOf="@id/iv_my_menu"
            android:layout_marginRight="10dp">
        </ImageView>
        <ImageView
            android:id="@+id/iv_my_menu"
            android:layout_width="30dp"
            android:layout_height="30dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            android:src="@drawable/ic_menu">
        </ImageView>
    </androidx.constraintlayout.widget.ConstraintLayout>
    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rv_my"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintTop_toBottomOf="@id/cl_my_app_bar"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintVertical_weight="12"
        app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
        android:orientation="vertical">
    </androidx.recyclerview.widget.RecyclerView>

</androidx.constraintlayout.widget.ConstraintLayout>