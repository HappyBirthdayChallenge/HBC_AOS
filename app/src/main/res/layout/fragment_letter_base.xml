<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="@color/white">
    <ImageView
        android:id="@+id/iv_letter_base_back"
        android:layout_width="25dp"
        android:layout_height="25dp"
        android:src="@drawable/ic_back"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginTop="25dp"
        android:layout_marginLeft="25dp">
    </ImageView>
    <TextView
        android:id="@+id/tv_letter_base_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="편지쓰기"
        android:textSize="20sp"
        app:layout_constraintTop_toTopOf="@id/iv_letter_base_back"
        app:layout_constraintBottom_toBottomOf="@id/iv_letter_base_back"
        app:layout_constraintLeft_toRightOf="@id/iv_letter_base_back"
        android:layout_marginLeft="24dp">
    </TextView>
    <ImageView
        android:id="@+id/iv_letter_base_send"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="@id/tv_letter_base_send"
        app:layout_constraintBottom_toBottomOf="@id/tv_letter_base_send"
        app:layout_constraintRight_toLeftOf="@id/tv_letter_base_send"
        android:src="@drawable/ic_letter_send"
        android:layout_marginRight="5dp"
        android:visibility="gone">
    </ImageView>
    <TextView
        android:id="@+id/tv_letter_base_send"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:text="보내기"
        android:textSize="18sp"
        android:textColor="@color/main_color"
        android:layout_marginTop="25dp"
        android:layout_marginRight="25dp"
        android:visibility="gone">
    </TextView>



    <androidx.viewpager2.widget.ViewPager2
        android:id="@+id/vp_letter_base"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintTop_toBottomOf="@id/tv_letter_base_title"
        app:layout_constraintBottom_toTopOf="@id/tl_letter_base"
        android:layout_marginTop="20dp">
    </androidx.viewpager2.widget.ViewPager2>


    <com.google.android.material.tabs.TabLayout
        android:id="@+id/tl_letter_base"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/vp_letter_base"
        app:layout_constraintBottom_toBottomOf="parent"
        app:tabTextColor="@color/hint_text"
        app:tabSelectedTextColor="@color/main_color"
        app:tabIndicatorHeight="0dp">
        <com.google.android.material.tabs.TabItem
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="장식품">
        </com.google.android.material.tabs.TabItem>
        <com.google.android.material.tabs.TabItem
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="효과">
        </com.google.android.material.tabs.TabItem>
        <com.google.android.material.tabs.TabItem
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="편지">
        </com.google.android.material.tabs.TabItem>
</com.google.android.material.tabs.TabLayout>



    <TextView
        android:id="@+id/tv_letter_base_add_background"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toTopOf="@id/rv_letter_base_add_menu"
        android:background="@color/transparent_gray"
        android:visibility="gone">
    </TextView>
    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rv_letter_base_add_menu"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/tv_letter_base_add_background"
        app:layout_constraintBottom_toBottomOf="parent"
        android:visibility="gone"
        app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
        android:orientation="vertical"
        tools:listitem="@layout/item_letter_menu"
        android:elevation="1dp"
        android:background="@color/white">
    </androidx.recyclerview.widget.RecyclerView>


    <TextView
        android:id="@+id/tv_letter_base_background"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/transparent_gray"
        android:visibility="gone">
    </TextView>
    <TextView
        android:id="@+id/tv_letter_base_spacer"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toTopOf="@id/cl_letter_base"
        app:layout_constraintVertical_weight="3">
    </TextView>
    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/cl_letter_base"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tv_letter_base_spacer"
        android:background="@drawable/item_letter_confirm_top_round"
        app:layout_constraintVertical_weight="2">
        <TextView
            android:id="@+id/tv_letter_base_confirm_title"
            android:layout_width="wrap_content"
            android:layout_height="0dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintBottom_toTopOf="@id/tv_letter_base_content"
            android:text="전달 전 확인"
            android:textSize="24sp"
            android:layout_marginTop="30dp"
            android:layout_marginLeft="30dp"
            android:textStyle="bold"
            app:layout_constraintHorizontal_weight="3"
            app:layout_constraintVertical_weight="2">
        </TextView>

        <TextView
            android:id="@+id/tv_letter_base_content"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            app:layout_constraintTop_toBottomOf="@id/tv_letter_base_confirm_title"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            android:layout_marginHorizontal="30dp"
            android:text="지금 메시지를 보내면 상대방에게 즉시 알림이 발송돼요!\n
다만, 메시지 내용은 생일 당일에 확인할 수 있어요, 이대로 보낼까요?"
            app:layout_constraintBottom_toTopOf="@id/tv_letter_base_confirm_go_back"
            android:textSize="19sp"
            app:layout_constraintVertical_weight="5">
        </TextView>

        <TextView
            android:id="@+id/tv_letter_base_confirm_go_back"
            android:layout_width="0dp"
            android:layout_height="0dp"
            app:layout_constraintTop_toBottomOf="@id/tv_letter_base_content"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toLeftOf="@id/tv_letter_base_confirm_send"
            app:layout_constraintBottom_toBottomOf="parent"
            android:text="취소"
            android:textSize="16sp"
            android:textAlignment="center"
            android:background="@color/hint_text"
            app:layout_constraintHorizontal_weight="2"
            app:layout_constraintVertical_weight="1.5"
            android:gravity="center">
        </TextView>
        <TextView
            android:id="@+id/tv_letter_base_confirm_send"
            android:layout_width="0dp"
            android:layout_height="0dp"
            app:layout_constraintBottom_toBottomOf="@id/tv_letter_base_confirm_go_back"
            app:layout_constraintTop_toTopOf="@id/tv_letter_base_confirm_go_back"
            app:layout_constraintLeft_toRightOf="@id/tv_letter_base_confirm_go_back"
            app:layout_constraintRight_toRightOf="parent"
            android:text="보내기"
            android:textSize="16sp"
            android:textAlignment="center"
            android:textColor="@color/sub_color"
            android:background="@color/main_color"
            app:layout_constraintHorizontal_weight="3"
            android:gravity="center">
        </TextView>
    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.constraintlayout.widget.ConstraintLayout>