<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/cl_letter_base">
    <ImageView
        android:id="@+id/iv_letter_base_close"
        android:layout_width="25dp"
        android:layout_height="25dp"
        android:src="@drawable/ic_close"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginTop="25dp"
        android:layout_marginLeft="25dp">
    </ImageView>
    <TextView
        android:id="@+id/tv_letter_base_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="편지쓰기"
        android:textSize="24sp"
        app:layout_constraintTop_toTopOf="@id/iv_letter_base_close"
        app:layout_constraintBottom_toBottomOf="@id/iv_letter_base_close"
        app:layout_constraintLeft_toRightOf="@id/iv_letter_base_close"
        android:layout_marginLeft="24dp">
    </TextView>



    <androidx.viewpager2.widget.ViewPager2
        android:id="@+id/vp_letter_base"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintTop_toBottomOf="@id/tv_letter_base_title"
        app:layout_constraintBottom_toTopOf="@id/tl_letter_base"
        android:layout_marginTop="20dp">
    </androidx.viewpager2.widget.ViewPager2>


    <com.google.android.material.tabs.TabLayout
        android:id="@+id/tl_letter_base"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/vp_letter_base"
        app:layout_constraintBottom_toBottomOf="parent"
        app:tabTextColor="@color/hint_text"
        app:tabSelectedTextColor="@color/main_color"
        app:tabIndicatorHeight="0dp">
        <com.google.android.material.tabs.TabItem
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="장식품">
        </com.google.android.material.tabs.TabItem>
        <com.google.android.material.tabs.TabItem
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="효과">
        </com.google.android.material.tabs.TabItem>
        <com.google.android.material.tabs.TabItem
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="편지">
        </com.google.android.material.tabs.TabItem>
</com.google.android.material.tabs.TabLayout>



    <TextView
        android:id="@+id/tv_letter_base_add_background"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toTopOf="@id/rv_letter_base_add_menu"
        android:background="@color/transparent_gray"
        android:visibility="gone">
    </TextView>
    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rv_letter_base_add_menu"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/tv_letter_base_add_background"
        app:layout_constraintBottom_toBottomOf="parent"
        android:visibility="gone"
        app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
        android:orientation="vertical"
        tools:listitem="@layout/item_letter_menu"
        android:elevation="1dp"
        android:background="@color/white">
    </androidx.recyclerview.widget.RecyclerView>
</androidx.constraintlayout.widget.ConstraintLayout>