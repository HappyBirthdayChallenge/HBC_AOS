<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="80dp"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="5dp"
        app:cardCornerRadius="10dp"
        android:elevation="5dp">
        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <ImageView
                android:id="@+id/iv_item_menu_message_object"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toLeftOf="@id/tv_item_menu_message"
                app:layout_constraintHorizontal_weight="2"
                android:layout_marginVertical="5dp"
                android:src="@drawable/img_deco_toy_1">
            </ImageView>
            <TextView
                android:id="@+id/tv_item_menu_message"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                app:layout_constraintLeft_toRightOf="@id/iv_item_menu_message_object"
                app:layout_constraintRight_toLeftOf="@id/iv_item_menu_message_go"
                app:layout_constraintHorizontal_weight="6"
                android:layout_marginLeft="10dp"
                android:text="To. SomeoneID"
                android:textStyle="bold"
                android:textSize="15sp"
                android:gravity="center | left">
            </TextView>
            <ImageView
                android:id="@+id/iv_item_menu_message_go"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                app:layout_constraintLeft_toRightOf="@id/tv_item_menu_message"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintHorizontal_weight="1"
                android:src="@drawable/ic_go_further">
            </ImageView>
        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.cardview.widget.CardView>

</androidx.constraintlayout.widget.ConstraintLayout>