<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/cl_object_selection"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/white">
    <ImageView
        android:id="@+id/iv_object_selection_back"
        android:layout_width="25dp"
        android:layout_height="25dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toLeftOf="@id/tv_object_selection_title"
        android:src="@drawable/ic_back"
        android:layout_marginTop="25dp"
        android:layout_marginLeft="25dp">
    </ImageView>
    <TextView
        android:id="@+id/tv_object_selection_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintLeft_toRightOf="@id/iv_object_selection_back"
        app:layout_constraintTop_toTopOf="@id/iv_object_selection_back"
        app:layout_constraintBottom_toBottomOf="@id/iv_object_selection_back"
        android:text="이름"
        android:textSize="20sp"
        android:textStyle="bold"
        android:layout_marginLeft="15dp">
    </TextView>
    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rv_object_selection"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginTop="20dp"
        app:layout_constraintTop_toBottomOf="@id/tv_object_selection_title"
        app:layout_constraintBottom_toBottomOf="parent">
    </androidx.recyclerview.widget.RecyclerView>
</androidx.constraintlayout.widget.ConstraintLayout>