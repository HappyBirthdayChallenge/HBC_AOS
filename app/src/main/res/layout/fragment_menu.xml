<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="@color/white">
    <ImageView
        android:id="@+id/iv_menu_close"
        android:layout_width="35dp"
        android:layout_height="35dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintBottom_toTopOf="@id/rv_menu"
        android:src="@drawable/ic_close"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="20dp">
    </ImageView>

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rv_menu"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/iv_menu_close"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginTop="50dp"
        app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
        android:orientation="vertical"
        tools:listitem="@layout/item_menu_list"
        android:layout_marginHorizontal="40dp">
    </androidx.recyclerview.widget.RecyclerView>

    <TextView
        android:id="@+id/tv_menu_line"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        app:layout_constraintBottom_toTopOf="@id/tv_menu_signout"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:background="@color/black"
        android:layout_marginHorizontal="35dp"
        android:layout_marginBottom="23dp">
    </TextView>

    <TextView
        android:id="@+id/tv_menu_signout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toTopOf="@id/tv_menu_line"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toLeftOf="@id/tv_menu_info"
        app:layout_constraintHorizontal_chainStyle="spread"
        android:text="로그아웃">
    </TextView>
    <TextView
        android:id="@+id/tv_menu_info"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toTopOf="@id/tv_menu_line"
        app:layout_constraintLeft_toRightOf="@id/tv_menu_signout"
        app:layout_constraintRight_toLeftOf="@id/tv_menu_role"
        android:text="개인정보취급방침">
    </TextView>
    <TextView
        android:id="@+id/tv_menu_role"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toTopOf="@id/tv_menu_line"
        app:layout_constraintLeft_toRightOf="@id/tv_menu_info"
        app:layout_constraintRight_toRightOf="parent"
        android:text="사용자약관">
    </TextView>

</androidx.constraintlayout.widget.ConstraintLayout>