<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <ImageView
        android:id="@+id/iv_letter_record_back"
        android:layout_width="25dp"
        android:layout_height="25dp"
        android:src="@drawable/ic_back"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginTop="25dp"
        android:layout_marginLeft="25dp">
    </ImageView>
    <TextView
        android:id="@+id/tv_letter_record_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="편지쓰기"
        android:textSize="20sp"
        app:layout_constraintTop_toTopOf="@id/iv_letter_record_back"
        app:layout_constraintBottom_toBottomOf="@id/iv_letter_record_back"
        app:layout_constraintLeft_toRightOf="@id/iv_letter_record_back"
        android:layout_marginLeft="24dp">
    </TextView>


    <TextView
        android:id="@+id/tv_letter_record_state"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
    </TextView>
    <com.airbnb.lottie.LottieAnimationView
        android:id="@+id/lav_letter_record_state"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
    </com.airbnb.lottie.LottieAnimationView>
    <ImageView
        android:id="@+id/iv_letter_record_play"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
    </ImageView>



    <ImageView
        android:id="@+id/iv_letter_record_reset"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
    </ImageView>
    <ImageView
        android:id="@+id/iv_letter_record_recording"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
    </ImageView>
    <ImageView
        android:id="@+id/iv_letter_record_stop"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
    </ImageView>


    <TextView
        android:id="@+id/tv_letter_Record_submit"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="첨부하기">
    </TextView>
</androidx.constraintlayout.widget.ConstraintLayout>