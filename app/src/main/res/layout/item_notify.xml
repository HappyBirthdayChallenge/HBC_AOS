<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="80dp"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <androidx.cardview.widget.CardView
        android:id="@+id/cv_item_notify_profile"
        android:layout_width="50dp"
        android:layout_height="50dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toLeftOf="@id/tv_item_notify"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintHorizontal_weight="1"
        android:layout_margin="5dp"
        app:cardCornerRadius="100dp"
        android:visibility="invisible">
        <ImageView
            android:id="@+id/iv_item_notify_profile"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:src="@drawable/ic_profile">
        </ImageView>
    </androidx.cardview.widget.CardView>

    <ImageView
        android:id="@+id/iv_item_notify_else"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toLeftOf="@id/tv_item_notify"
        app:layout_constraintHorizontal_weight="1"
        android:layout_margin="5dp"
        android:src="@drawable/img_deco_gift_5">
    </ImageView>

    <TextView
        android:id="@+id/tv_item_notify"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        app:layout_constraintLeft_toRightOf="@id/cv_item_notify_profile"
        app:layout_constraintRight_toLeftOf="@id/tv_item_notify_follow"
        app:layout_constraintHorizontal_weight="4"
        android:paddingLeft="10dp"
        android:textSize="15sp"
        android:gravity="left | center">
    </TextView>

    <TextView
        android:id="@+id/tv_item_notify_follow"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintLeft_toRightOf="@id/tv_item_notify"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintHorizontal_weight="1"
        android:background="@drawable/item_blue_follow_btn"
        android:text="팔로우"
        android:textSize="15sp"
        android:textStyle="bold"
        android:textColor="@color/blue"
        android:paddingHorizontal="10dp"
        android:paddingVertical="5dp"
        android:layout_marginHorizontal="10dp"
        android:elevation="5dp">
    </TextView>

</androidx.constraintlayout.widget.ConstraintLayout>